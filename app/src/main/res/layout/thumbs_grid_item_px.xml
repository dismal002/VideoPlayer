<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="@dimen/main_gv_item_height_px">
    <FrameLayout android:id="@+id/browser_grid_video_framelayout" android:background="@drawable/thumb_border" android:layout_width="match_parent" android:layout_height="@dimen/main_gv_video_item_height_px">
        <ImageView android:layout_gravity="center" android:id="@+id/grid_item_image" android:background="@drawable/ic_media_default" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/browser_grid_video_texts" android:layout_width="match_parent" android:layout_height="@dimen/thumb_grid_item_text_height_px">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/grid_view_text_color" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/grid_item_title" android:layout_width="match_parent" android:layout_height="@dimen/thumb_grid_item_text1_height_px" android:layout_marginLeft="@dimen/thumb_grid_item_text_margin_px" android:layout_marginRight="@dimen/thumb_grid_item_text_margin_px" android:singleLine="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/grid_view_text_color" android:layout_gravity="center" android:id="@+id/grid_item_timeinfo" android:layout_width="match_parent" android:layout_height="@dimen/thumb_grid_item_text2_height_px" android:layout_marginLeft="@dimen/thumb_grid_item_text_margin_px" android:layout_marginRight="@dimen/thumb_grid_item_text_margin_px"/>
    </LinearLayout>
</LinearLayout>
