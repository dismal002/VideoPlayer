<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="MyActionBarStyle">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_logo</item>
    </style>
    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/MyActivityAnimation</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="AppTheme.FullScreen">
    </style>
    <style name="ThemeNoTitleBarFullScreen">
        <item name="android:windowAnimationStyle">@style/MyActivityAnimation</item>
    </style>
    <style name="MyActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    <style name="PhotoGridLayout">
        <item name="android:listSelector">@null</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>
    <style name="progressBarVertical">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxWidth">5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minWidth">5dp</item>
    </style>
    <style name="MyProgressStyle">
        <item name="android:maxWidth">96dp</item>
        <item name="android:maxHeight">96dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
    </style>
    <style name="SimpleDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SettingDialog">
        <item name="android:windowBackground">@drawable/bttn_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
